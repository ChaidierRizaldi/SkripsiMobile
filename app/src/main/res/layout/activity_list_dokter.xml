<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#EBF6FF"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="2dp"
            android:id="@+id/iv_pengajar"
            android:src="@drawable/doctor1"/>

        <TextView
            android:id="@+id/tv_nama_pengajar"
            android:layout_width="339dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/iv_pengajar"
            android:text="nama dokter"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_gelar_pengajar"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nama_pengajar"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/iv_pengajar"
            android:text="Jabatan"
            android:textAlignment="center"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>