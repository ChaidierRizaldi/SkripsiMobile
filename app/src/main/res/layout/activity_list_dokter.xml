<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#EBF6FF"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_nama_pengajar"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="nama dokter"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_gelar_pengajar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nama_pengajar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:maxLines="2"
            android:layout_marginTop="4dp"
            android:text="Jabatan"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_bidang_pengajar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_gelar_pengajar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:maxLines="2"
            android:layout_marginTop="4dp"
            android:text="Jabatan"
            android:textAlignment="center"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>