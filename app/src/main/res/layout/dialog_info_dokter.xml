<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/dialog_box"
    android:id="@+id/layout_dialog"
    android:layout_margin="10dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_marginStart="30dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_tv_nama_pengajar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="18sp"
            android:hint="Nama Dokter"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/dialog_tv_jabatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:hint="Jabatan"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/dialog_tv_nidn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:hint="NIDN"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/dialog_tv_no_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:hint="Nomor Telepon"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/dialog_tv_email_pengajar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sans"
            android:textSize="16sp"
            android:hint="Email"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dialog_tv_bidang_pengajar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sans"
            android:textSize="16sp"
            android:hint="Bidang"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>