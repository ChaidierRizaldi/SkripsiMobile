<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidmedsch"
    android:targetSandboxVersion="1">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".utils.BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_apl_medsch"
        android:label="Medsch Mahasiswa"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_apl_medsch_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.Profil"></activity>
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.LandingPage" />
        <activity
            android:name=".JadwalKuliah"
            android:parentActivityName=".ui.menu.Dashboard" />
        <activity
            android:name=".DaftarDokter"
            android:parentActivityName=".ui.menu.Dashboard" />
        <activity android:name=".ui.menu.Dashboard" />
        <activity android:name=".ui.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>